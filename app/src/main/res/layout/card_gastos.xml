<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagenConsolidado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/red_arrow" />

        <TextView
            android:id="@+id/tvMovimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="EGRESO"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@+id/imagenConsolidado"
            android:layout_toEndOf="@+id/imagenConsolidado"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvTitleFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Fecha: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@+id/tvMovimiento"
            android:layout_toEndOf="@+id/imagenConsolidado"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="27/06/2022"
            android:textSize="15sp"
            android:layout_below="@+id/tvMovimiento"
            android:layout_toEndOf="@+id/tvTitleFecha"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tvTipoMovimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="CategorÃ­a: "
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@+id/tvTitleFecha"
            android:layout_toEndOf="@+id/imagenConsolidado"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/tvFecha"
            android:layout_toEndOf="@+id/tvTipoMovimiento"
            android:text="Pago Arriendo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTitleTotalEgresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/tvTipoMovimiento"
            android:layout_toEndOf="@+id/imagenConsolidado"
            android:text="Valor "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvCategoria"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tvTitleTotalEgresos"
            android:text="$200.000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_editarGasto"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_below="@+id/tvValor"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:text="editar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_eliminarGasto"
            android:layout_width="160dp"
            android:layout_height="47dp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/tvValor"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btn_editarGasto"
            android:text="eliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_editarGasto"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>